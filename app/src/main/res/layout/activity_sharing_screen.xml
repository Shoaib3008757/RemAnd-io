<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sharing_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ranglerz.remand_io.SharingScreen"
    android:background="@drawable/simple_bg">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Recording Status: "
        android:textColor="@color/darkBlue"
        android:textAppearance="?android:attr/textAppearanceLarge"/>

    <ToggleButton
        android:id="@+id/toggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="Start"
        android:textColor="@color/white"
        android:background="@drawable/corner"/>
    <Button
        android:id="@+id/bt_connect"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Connect With Device"
        android:background="@drawable/corner"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:layout_below="@+id/toggle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>


    <EditText
        android:id="@+id/ed_test"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/toggle"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@+id/toggle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="85dp" />




    <SurfaceView
        android:id="@+id/surface"
        android:layout_below="@+id/imageView"
        android:layout_width="400dp"
        android:layout_height="match_parent"
        android:layout_weight="1"/>


</RelativeLayout>